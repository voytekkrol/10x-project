---
/**
 * Forgot Password Page
 * 
 * Renders the password reset request form.
 * Public page - accessible without authentication.
 */

import AuthLayout from "../../layouts/AuthLayout.astro";
import { ForgotPasswordForm } from "../../components/auth/ForgotPasswordForm";

// Check if user is already authenticated
// If they are, redirect them to the main app
if (Astro.locals.user) {
  return Astro.redirect("/generate");
}

export const prerender = false;
---

<AuthLayout title="Reset Password" description="Enter your email to receive a password reset link">
  <ForgotPasswordForm client:load />
